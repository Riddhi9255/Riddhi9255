#include <iostream>
using namespace std;

int fibonacci(int n) {
    if (n <= 1) {
        return n;
    }
    return fibonacci(n - 1) + fibonacci(n - 2);
}

int main() {
    int num;
    cout<<"riddhi memdavadi";
    cout<<"220130318035";
    cout << "Enter the number of Fibonacci terms: ";
    cin >> num;

    cout << "Fibonacci series: ";
    for (int i = 0; i < num; ++i) {
        cout << fibonacci(i) << " ";
    }
    cout << endl;

    return 0;
}
output:
riddhi memdavadi
220130318035
Enter the number of Fibonacci terms: 7
Fibonacci series: 0 1 1 2 3 5 8
