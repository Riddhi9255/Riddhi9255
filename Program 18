#include <iostream>
using namespace std;

double power(double base, int exponent) {
    if (exponent == 0) {
        return 1.0;
    }
    
    double result = base;
    for (int i = 1; i < exponent; ++i) {
        result *= base;
    }
    
    return result;
}

int main() {
    double base;
    int exponent;
    cout<<"riddhi memdavadi ";
    cout<<"220130318035";
    cout << "Enter the base: ";
    cin >> base;

    cout << "Enter the exponent: ";
    cin >> exponent;

    double result = power(base, exponent);
    cout << base << " raised to the power of " << exponent << " is " << result << endl;

    return 0;
}
